{
  "name": "05-issue-tracker-sync",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "issue-sync",
        "options": {}
      },
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [250, 300]
    },
    {
      "parameters": {
        "operation": "create",
        "headers": {
          "Authorization": "Bearer {{$env[\"LINEAR_API_KEY\"]}}"
        },
        "url": "https://api.linear.app/graphql",
        "bodyParametersUi": {
          "parameter": [
            {
              "name": "query",
              "value": "mutation { issueCreate(input: { title: \"{{$node[\"Webhook\"].json[\"body\"][\"issue\"][\"title\"]}}\", teamId: \"{{$env[\"LINEAR_TEAM_ID\"]}}\" }) { success issue { id title } } }"
            }
          ]
        }
      },
      "name": "Linear API",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [450, 300]
    }
  ],
  "connections": {
    "Webhook": {
      "main": [
        [
          {
            "node": "Linear API",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}
