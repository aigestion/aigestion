{
  "name": "32-database-backup-scheduler",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "days",
              "triggerAtHour": 3
            }
          ]
        }
      },
      "name": "Daily Backup",
      "type": "n8n-nodes-base.cron",
      "typeVersion": 1,
      "position": [250, 300]
    },
    {
      "parameters": {
        "command": "pg_dump -h $DB_HOST -U $DB_USER $DB_NAME > /backups/db-{{$today}}.sql"
      },
      "name": "Dump DB",
      "type": "n8n-nodes-base.executeCommand",
      "typeVersion": 1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "bucketName": "db-backups",
        "fileName": "/backups/db-{{$today}}.sql"
      },
      "name": "Upload S3",
      "type": "n8n-nodes-base.awsS3",
      "typeVersion": 1,
      "position": [650, 300]
    }
  ],
  "connections": {
    "Daily Backup": {
      "main": [
        [
          {
            "node": "Dump DB",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Dump DB": {
      "main": [
        [
          {
            "node": "Upload S3",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}
