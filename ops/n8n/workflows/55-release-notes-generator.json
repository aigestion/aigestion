{
  "name": "55-release-notes-generator",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "gen-release-notes",
        "options": {}
      },
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [250, 300]
    },
    {
      "parameters": {
        "resource": "commit",
        "operation": "list",
        "owner": "Alejandro",
        "repository": "AIGestion"
      },
      "name": "Get Commits",
      "type": "n8n-nodes-base.github",
      "typeVersion": 1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "model": "gpt-4",
        "prompt": "=Generate release notes from these commits:\n{{$node[\"Get Commits\"].json.map(c => c.commit.message).join(\"\\n\")}}"
      },
      "name": "OpenAI",
      "type": "n8n-nodes-base.openAi",
      "typeVersion": 1,
      "position": [650, 300]
    },
    {
      "parameters": {
        "operation": "create",
        "owner": "Alejandro",
        "repository": "AIGestion",
        "tag": "v{{$today}}",
        "name": "Release {{$today}}",
        "body": "={{$node[\"OpenAI\"].json[\"choices\"][0][\"message\"][\"content\"]}}"
      },
      "name": "Create Release",
      "type": "n8n-nodes-base.github",
      "typeVersion": 1,
      "position": [850, 300]
    }
  ],
  "connections": {
    "Webhook": {
      "main": [
        [
          {
            "node": "Get Commits",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Get Commits": {
      "main": [
        [
          {
            "node": "OpenAI",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "OpenAI": {
      "main": [
        [
          {
            "node": "Create Release",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Create Release": {
      "main": [
        [
          {
            "node": "Notify",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}
