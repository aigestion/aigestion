{
  "name": "60-git-branch-cleanup",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "weeks",
              "triggerAtHour": 1
            }
          ]
        }
      },
      "name": "Weekly",
      "type": "n8n-nodes-base.cron",
      "typeVersion": 1,
      "position": [250, 300]
    },
    {
      "parameters": {
        "command": "git fetch --prune && git branch --merged | grep -v '\\*' | grep -v 'main' | xargs -n 1 git branch -d"
      },
      "name": "Prune Branches",
      "type": "n8n-nodes-base.executeCommand",
      "typeVersion": 1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "channel": "dev-cleanup",
        "text": "Cleaned up merged local branches.",
        "otherOptions": {}
      },
      "name": "Notify",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [650, 300]
    }
  ],
  "connections": {
    "Weekly": {
      "main": [
        [
          {
            "node": "Prune Branches",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Prune Branches": {
      "main": [
        [
          {
            "node": "Notify",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}
