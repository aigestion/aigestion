      },
      "name": "Slack Command",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [250, 300]
    },
    {
      "parameters": {
        "model": "text-embedding-ada-002",
        "text": "={{$node[\"Slack Command\"].json[\"body\"][\"text\"]}}"
      },
      "name": "Create Embedding",
      "type": "n8n-nodes-base.openAi",
      "typeVersion": 1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "operation": "query",
