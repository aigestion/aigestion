        "vector": "={{$node[\"Create Embedding\"].json[\"embedding\"]}}",
        "limit": 3
      },
      "name": "Pinecone Query",
      "type": "n8n-nodes-base.pinecone",
      "typeVersion": 1,
      "position": [650, 300]
    },
    {
      "parameters": {
        "model": "gpt-4",
        "prompt": "=Answer this question based on the context:\nQuestion: {{$node[\"Slack Command\"].json[\"body\"][\"text\"]}}\nContext:\n{{$node[\"Pinecone Query\"].json.map(m => m.metadata.text).join(\"\\n\")}}"
      },
      "name": "Generate Answer",
      "type": "n8n-nodes-base.openAi",
      "typeVersion": 1,
      "position": [850, 300]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{$node[\"Generate Answer\"].json[\"choices\"][0][\"message\"][\"content\"]}}"
      },
      "name": "Respond",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [1050, 300]
    }
  ],
  "connections": {
