{
  "$schema": "https://turborepo.org/schema.json",
  "concurrency": "4",
  "globalDependencies": [
    ".env",
    ".env.local",
    "tsconfig.json"
  ],
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "!**/*.test.ts",
        "!**/*.spec.ts",
        "!**/__tests__/**"
      ],
      "env": [
        "NODE_ENV"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "PORT",
        "DATABASE_URL"
      ]
    },
    "lint": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        ".eslintrc*",
        "eslint.config.*",
        "package.json"
      ]
    },
    "lint:fix": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [],
      "cache": false
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "format:check": {
      "outputs": [],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        ".prettierrc*"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json",
        "tsconfig.*.json",
        "package.json"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**",
        "test-results/**",
        ".nyc_output/**"
      ],
      "inputs": [
        "src/**",
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/__tests__/**",
        "jest.config.*",
        "vitest.config.*"
      ],
      "env": [
        "NODE_ENV",
        "CI"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "NODE_ENV",
        "CI"
      ]
    },
    "test:e2e": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "cypress/screenshots/**",
        "cypress/videos/**",
        "playwright-report/**"
      ],
      "env": [
        "NODE_ENV",
        "CI",
        "CYPRESS_*"
      ]
    },
    "docs": {
      "outputs": [
        "docs/build/**",
        "storybook-static/**"
      ],
      "inputs": [
        "docs/**",
        "src/**/*.stories.*",
        "src/**/*.mdx"
      ]
    },
    "docs:dev": {
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "storybook:build": {
      "outputs": [
        "storybook-static/**"
      ],
      "inputs": [
        "**/*.stories.*",
        "**/*.mdx",
        ".storybook/**"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}
