# =============================================================================
# AIGestion - Docker Environment Template (Optimized)
# Copy this file to .env and fill in the values
# Generated: 2025-12-19 | Level: Maximum Security
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=3000
NODE_ENV=development

# -----------------------------------------------------------------------------
# MongoDB Configuration
# -----------------------------------------------------------------------------
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_MONGO_PASSWORD
MONGO_INITDB_DATABASE=aigestion_db
MONGODB_URI=mongodb://admin:CHANGE_THIS_MONGO_PASSWORD@mongodb:27017/aigestion_db?authSource=admin

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
JWT_SECRET=CHANGE_THIS_JWT_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# -----------------------------------------------------------------------------
# Session Configuration
# -----------------------------------------------------------------------------
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_MIN_32_CHARS

# -----------------------------------------------------------------------------
# Email Configuration (Gmail SMTP)
# -----------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@your-domain.com

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# OpenTelemetry Configuration
# -----------------------------------------------------------------------------
OTEL_SERVICE_NAME=aigestion-backend
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# -----------------------------------------------------------------------------
# Google Cloud Configuration
# -----------------------------------------------------------------------------
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/v1/google/oauth2callback

# Google AI APIs
GOOGLE_GENAI_API_KEY=your-gemini-api-key
GOOGLE_TTS_API_KEY=your-tts-api-key
YOUTUBE_API_KEY=your-youtube-api-key
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_GENERATIVE_LANGUAGE_API_KEY=your-gen-lang-api-key

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_URI=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379

# -----------------------------------------------------------------------------
# RabbitMQ Configuration
# -----------------------------------------------------------------------------
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=CHANGE_THIS_RABBITMQ_PASSWORD
RABBITMQ_DEFAULT_VHOST=/AIGestion
RABBITMQ_URI=amqp://admin:CHANGE_THIS_RABBITMQ_PASSWORD@rabbitmq:5672/%2FAIGestion

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1

# -----------------------------------------------------------------------------
# Railway Configuration
# -----------------------------------------------------------------------------
RAILWAY_API_TOKEN=your-railway-token

# -----------------------------------------------------------------------------
# AI/ML Providers
# -----------------------------------------------------------------------------
HUGGINGFACE_API_TOKEN=your-huggingface-token
DEEPSEEK_API_TOKEN=your-deepseek-token

# -----------------------------------------------------------------------------
# Payment Providers
# -----------------------------------------------------------------------------
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret

# -----------------------------------------------------------------------------
# Communication Providers
# -----------------------------------------------------------------------------
# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Mailjet
MAILJET_API_KEY=your-mailjet-api-key
MAILJET_SECRET_KEY=your-mailjet-secret-key

# -----------------------------------------------------------------------------
# Social Media
# -----------------------------------------------------------------------------
FACEBOOK_PAGE_ID=your-facebook-page-id
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

# -----------------------------------------------------------------------------
# Gmail OAuth2 - Professional Account
# -----------------------------------------------------------------------------
GMAIL_PROFESSIONAL_EMAIL=your-professional-email@domain.com
GMAIL_PROFESSIONAL_CLIENT_ID=your-client-id.apps.googleusercontent.com
GMAIL_PROFESSIONAL_CLIENT_SECRET=your-client-secret
GMAIL_PROFESSIONAL_REFRESH_TOKEN=your-refresh-token

# -----------------------------------------------------------------------------
# Gmail OAuth2 - Personal Account
# -----------------------------------------------------------------------------
GMAIL_PERSONAL_EMAIL=your-personal-email@gmail.com
GMAIL_PERSONAL_CLIENT_ID=your-client-id.apps.googleusercontent.com
GMAIL_PERSONAL_CLIENT_SECRET=your-client-secret
GMAIL_PERSONAL_REFRESH_TOKEN=your-refresh-token

# -----------------------------------------------------------------------------
# Gmail Service Account
# -----------------------------------------------------------------------------
GMAIL_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GMAIL_SERVICE_ACCOUNT_PRIVATE_KEY=./service-account-key.json
GMAIL_SERVICE_ACCOUNT_SUBJECT=your-email@gmail.com

# -----------------------------------------------------------------------------
# Monitoring & Observability
# -----------------------------------------------------------------------------
DATADOG_API_KEY=your-datadog-api-key
SENTRY_DSN=your-sentry-dsn

# -----------------------------------------------------------------------------
# MCP Configuration (Antigravity)
# -----------------------------------------------------------------------------
MCP_SERVER_URL=https://mcp-server.local
MCP_API_KEY=projects/your-project/secrets/your-secret/versions/latest

# -----------------------------------------------------------------------------
# Production Configuration
# -----------------------------------------------------------------------------
DOMAIN=your-domain.com
LETSENCRYPT_EMAIL=your-email@domain.com

# -----------------------------------------------------------------------------
# Docker Compose
# -----------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=aigestion

# -----------------------------------------------------------------------------
# API Documentation
# -----------------------------------------------------------------------------
API_DOCS_VERSION=1.0.0
API_TITLE=AIGestion Dashboard API
API_DESCRIPTION=API for AIGestion Dashboard application
