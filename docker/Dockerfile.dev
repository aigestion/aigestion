# Development environment with hot reload
FROM node:20-alpine

# Install build dependencies
RUN apk add --no-cache \
    libc6-compat \
    python3 \
    make \
    g++ \
    git \
    curl

# Create non-root user FIRST
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 appuser

WORKDIR /app

# Change ownership of workdir
RUN chown -R appuser:nodejs /app

# Switch to non-root user
USER appuser

# Install dependencies as non-root
COPY --chown=appuser:nodejs package.json package-lock.json* ./
COPY --chown=appuser:nodejs server/package.json server/package-lock.json* ./server/

RUN npm ci
RUN cd server && npm ci

# Copy source code as non-root
COPY --chown=appuser:nodejs . .

# Expose ports
EXPOSE 5173 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:3000/health || exit 1

# Start both dev servers
CMD ["sh", "-c", "npm run dev & cd server && npm run dev"]
