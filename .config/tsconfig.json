{
  "compilerOptions": {
    "lib": [
      "es2021",
      "dom"
    ],
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "out",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "traceResolution": false
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.in.ts",
    "linters",
    "documentation/**/*.tsx",
    "WEBSITE_EPIC_TOP5_IMPLEMENTATIONS.tsx"
  ]
}
