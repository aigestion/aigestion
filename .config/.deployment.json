  "troubleshooting": {
    "domain_not_resolving": {
      "cause": "DNS propagation delay or misconfiguration",
      "solution": "1. Wait 5-10 minutes 2. Check Vercel Dashboard 3. Verify nameservers"
    },
    "502_bad_gateway": {
      "cause": "Backend service unavailable or nginx misconfigured",
      "solution": "1. Check backend health 2. Verify nginx config 3. Restart services"
    },
    "static_assets_404": {
      "cause": "Incorrect build path or cache headers",
      "solution": "1. Verify dist/ folder 2. Check nginx location rules 3. Clear browser cache"
    },
    "spa_routing_broken": {
      "cause": "nginx not configured with try_files fallback",
      "solution": "1. Verify nginx.conf has try_files rule 2. Restart nginx 3. Test with curl"
    }
  },
