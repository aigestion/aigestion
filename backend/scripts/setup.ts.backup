async function setupEnvironment() {
  console.log(chalk.blue('\nüîß Configuraci√≥n del entorno AIGestion Dashboard\n'));

  // Verificar si el archivo .env existe
  const envPath = path.join(process.cwd(), '.env');
  let currentEnv: Record<string, string> = {};

  if (fs.existsSync(envPath)) {
    // Leer el archivo .env existente
    const envContent = fs.readFileSync(envPath, 'utf-8');
    envContent.split('\n').forEach(line => {
      const match = line.match(/^([^=]+)=(.*)$/);
      if (match) {
        const [, key, value] = match;
        currentEnv[key.trim()] = value.trim();
      }
    });

    console.log(chalk.yellow('üìÇ Archivo .env encontrado. Se actualizar√°n las variables necesarias.\n'));
  } else {
    console.log(chalk.yellow('üìÑ Creando nuevo archivo .env...\n'));
  }

  // Preparar preguntas para las variables faltantes
  const questions = Object.entries(envConfig).map(([key, config]) => {
    const currentValue = currentEnv[key];
    const isPassword = config.sensitive;

    return {
      type: isPassword ? 'password' : 'input',
      name: key,
      message: `${config.description}${config.required ? ' (requerido)' : ''}:`,
      default: currentValue || config.default,
      validate: (input: string) => {
        if (config.required && !input) {
          return 'Este campo es obligatorio';
        }
        if (key === 'JWT_SECRET' && input.length < 32) {
          return 'La clave secreta debe tener al menos 32 caracteres';
        }
        return true;
      },
      when: () => {
        // Preguntar si no tiene valor o si el usuario quiere sobrescribirlo
        return !currentEnv[key] || process.argv.includes('--force');
      },
    };
  });

  // Obtener respuestas del usuario
  const answers = await inquirer.prompt(questions);

  // Combinar con los valores existentes
  const updatedEnv = { ...currentEnv, ...answers };

  // Generar contenido del archivo .env
  const envContent = Object.entries(updatedEnv)
    .map(([key, value]) => `${key}=${value}`)
    .join('\n');

  // Escribir el archivo .env
  fs.writeFileSync(envPath, envContent);

  console.log(chalk.green('\n‚úÖ Configuraci√≥n completada con √©xito!\n'));
  console.log(chalk.blue('üìÑ Archivo .env actualizado en:'), envPath);

  // Mostrar resumen
  console.log('\nüîç Resumen de configuraci√≥n:');
  Object.entries(updatedEnv).forEach(([key, value]) => {
    const config = envConfig[key];
    const displayValue = config?.sensitive
      ? '*'.repeat(Math.min(value.length, 8)) + (value.length > 8 ? '...' : '')
      : value;
    console.log(`  ${chalk.cyan(key)}: ${chalk.yellow(displayValue)}`);
  });

  console.log('\n¬°Listo para comenzar! Ejecuta ' +
    chalk.green('npm run dev') +
    ' para iniciar el servidor en modo desarrollo.\n');
}

// Ejecutar el asistente
setupEnvironment().catch(error => {
  console.error(chalk.red('\n‚ùå Error durante la configuraci√≥n:'), error);
  process.exit(1);
});
