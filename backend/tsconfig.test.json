{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.js", "jest.config.js"],
  "exclude": ["node_modules", "dist"]
}
