{
  "version": 2,
  "public": false,
  "framework": "vite",
  "buildCommand": "pnpm --filter website-epic build",
  "outputDirectory": "frontend/apps/website-epic/dist",
  "installCommand": "pnpm install",
  "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
