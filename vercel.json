{
  "version": 2,
  "buildCommand": "node scripts/vercel-build.js",
  "outputDirectory": "frontend/website-epic/dist",
  "installCommand": "npm ci",
  "framework": "vite",
  "routes": [
    {
      "src": "/api/system/health",
      "dest": "https://backend-aigestion.run.app/api/v1/health",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    {
      "src": "/api/system/diagnostic",
      "dest": "https://backend-aigestion.run.app/api/v1/system/diagnostic",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "https://backend-aigestion.run.app/api/$1",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, PATCH, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Authorization, Cache-Control, X-Request-ID"
      }
    },
    {
      "src": "/admin",
      "dest": "/admin/index.html",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/client",
      "dest": "/client/index.html",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/demo",
      "dest": "/demo/index.html",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/website-epic/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_APP_URL": "https://aigestion.net",
    "NEXT_PUBLIC_API_URL": "https://aigestion.net/api",
    "NEXT_PUBLIC_WS_URL": "wss://aigestion.net"
  }
}
