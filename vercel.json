{
  "version": 2,
  "installCommand": "npm --prefix frontend/apps/website-epic install",
  "buildCommand": "npm --prefix frontend/apps/website-epic run build",
  "outputDirectory": "frontend/apps/website-epic/dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
