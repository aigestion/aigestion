{
  "name": "AIGestion Dev Tools",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Herramientas de desarrollo espec√≠ficas para AIGestion.net",
  "author": "AIGestion Team",
  "homepage_url": "https://aigestion.net",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "debugger",
    "webNavigation",
    "tabs",
    "background"
  ],
  "host_permissions": [
    "*://*.aigestion.net/*",
    "http://localhost:*/*",
    "https://localhost:*/*",
    "*://*.supabase.co/*",
    "*://*.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.aigestion.net/*", "http://localhost:*/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AIGestion Dev Tools",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    {
      "resources": ["injected.js", "styles.css"],
      "matches": ["*://*.aigestion.net/*", "http://localhost:*/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*.aigestion.net https://*.supabase.co"
  }
}
