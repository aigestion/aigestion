{
  "name": "nexus-v1-frontend-monorepo",
  "version": "2.0.0",
  "description": "NEXUS V1 Frontend Monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:all": "pnpm -r dev",
    "build:all": "pnpm -r build",
    "build": "pnpm run build:ui",
    "lint:all": "pnpm -r lint",
    "test:all": "pnpm -r test",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "test": "vitest run --config vitest.config.ts",
    "test:coverage": "vitest run --coverage --config vitest.config.ts",
    "css:build": "postcss src/**/*.css -o dist/styles.css",
    "css:watch": "postcss src/**/*.css -o dist/styles.css --watch",
    "storybook": "storybook dev -p 6006 --config-dir ./frontend/.storybook",
    "build-storybook": "storybook build --config-dir ./frontend/.storybook",
    "dev:ui": "pnpm --filter website-epic dev",
    "build:ui": "pnpm --filter website-epic build",
    "lint:ui": "eslint src",
    "format:ui": "prettier --write src"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "canvas-confetti": "^1.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@storybook/addon-a11y": "^8.6.15",
    "@storybook/addon-essentials": "^8.6.15",
    "@storybook/addon-onboarding": "^8.6.15",
    "@storybook/cli": "^8.6.15",
    "@storybook/react": "^8.6.15",
    "@storybook/react-vite": "^8.6.15",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/canvas-confetti": "^1.6.4",
    "@types/node": "^22.19.3",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.17",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "jsdom": "^24.0.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.4",
    "storybook": "^8.6.15",
    "tailwindcss": "^3.4.18",
    "typescript-eslint": "^8.50.0",
    "vite": "^5.4.21",
    "vite-plugin-static-copy": "^2.0.0",
    "vitest": "^2.1.4"
  },
  "peerDependencies": {
    "jsdom": "^24.0.0"
  }
}
