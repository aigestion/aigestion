{
  "name": "aigestion-website-epic",
  "version": "2.0.0",
  "description": "AIGestion Epic Website - Frontend Application",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite --config vite.config.ts",
    "build": "vite build --config vite.config.production.ts && npm run generate:critical-css",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer dist/static/js/*.js",
    "build:profile": "npm run build -- --profile",
    "build:optimize": "npm run build && node scripts/vercel-god-mode.js",
    "build:vercel": "node scripts/vercel-god-mode.cjs && npm run build",
    "build:dashboards": "npm run build:admin && npm run build:client && npm run build:demo",
    "build:admin": "vite build --config vite.admin.config.ts",
    "build:client": "vite build --config vite.client.config.ts",
    "build:demo": "vite build --config vite.demo.config.ts",
    "preview": "vite preview --config vite.config.production.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --config ../../../.config/eslint.config.cjs --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --config ../../../.config/eslint.config.cjs --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "vercel:build": "vercel build --prod",
    "vercel:deploy": "vercel deploy --prod",
    "vercel:preview": "vercel deploy",
    "performance:audit": "npm run build && npx lighthouse http://localhost:4173 --output=json --output-path=lighthouse-report.json",
    "security:audit": "npm audit --audit-level=high",
    "bundle:size": "npm run build && node scripts/check-bundle-size.js",
    "optimize:images": "node scripts/optimize-images.js",
    "generate:critical-css": "node scripts/generate-critical-css.js"
  },
  "dependencies": {
    "@aigestion/design-system-v2": "file:../../../packages/design-system-v2",
    "@react-three/drei": "^9.117.3",
    "@react-three/fiber": "^8.17.10",
    "@simplewebauthn/browser": "^13.2.2",
    "@supabase/supabase-js": "^2.93.1",
    "@tanstack/react-query": "^5.90.20",
    "axios": "^1.7.9",
    "clsx": "^2.1.1",
    "crystals-kyber": "^5.1.0",
    "framer-motion": "^12.26.2",
    "howler": "^2.2.4",
    "lucide-react": "^0.468.0",
    "maath": "^0.10.8",
    "react": "^18.3.1",
    "react-countup": "^6.5.3",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.2",
    "recharts": "^2.15.0",
    "tailwind-merge": "^2.5.4",
    "three": "^0.170.0",
    "tweetnacl": "^1.0.3",
    "zod": "^3.23.8",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/howler": "^2.2.11",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/three": "^0.170.0",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "critters": "^0.0.25",
    "eslint": "^9.18.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "jsdom": "^28.1.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.19",
    "terser": "^5.36.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^5.4.21"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}