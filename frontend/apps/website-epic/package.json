{
  "name": "website-epic",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:components": "vitest --config vitest.component.config.ts",
    "test:e2e": "playwright test",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:visual": "backstop test",
    "test:performance": "lighthouse http://localhost:4173 --output=json --output-path=./performance-report.json",
    "test:accessibility": "pa11y http://localhost:4173 --reporter=json",
    "type-check": "tsc --noEmit",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "analyze:ci": "npm run build -- --analyze",
    "performance": "npm run build && npm run analyze",
    "lighthouse": "npx lighthouse http://localhost:5173 --output=html --output-path=./lighthouse-results",
    "perf:audit": "npm run build && npm run analyze && npm run lighthouse",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:scan": "npm audit --json > security-report.json",
    "coverage:report": "codecov",
    "pre-commit": "lint-staged && pnpm type-check && pnpm test --run",
    "ci:test": "pnpm test:components && pnpm test:e2e && pnpm test:visual",
    "ci:build": "pnpm build:check && pnpm analyze",
    "ci:security": "pnpm security:audit && pnpm security:scan",
    "god-mode": "pnpm pre-commit && pnpm ci:build && pnpm ci:test && pnpm ci:security"
  },
  "dependencies": {
    "@aigestion/ui": "file:../../libs/ui",
    "@google/model-viewer": "^4.1.0",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^8.18.0",
    "@supabase/supabase-js": "^2.90.1",
    "@tanstack/react-query": "^5.59.20",
    "@tanstack/react-query-devtools": "^5.59.20",
    "@types/three": "^0.182.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.26.2",
    "howler": "^2.2.4",
    "lucide-react": "^0.479.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.2",
    "tailwind-merge": "^2.5.4",
    "three": "^0.182.0",
    "use-sound": "^5.0.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.28.5",
    "@types/howler": "^2.2.12",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.9.3",
    "vite": "^5.4.21"
  }
}
