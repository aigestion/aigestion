{
  "version": 2,
  "buildCommand": "node scripts/vercel-build.js",
  "outputDirectory": "frontend/apps/website-epic/dist",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "framework": "vite",

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "no-referrer-when-downgrade" },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=(self)" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    },
    {
      "source": "/(.*).html",
      "headers": [{ "key": "Cache-Control", "value": "no-cache, must-revalidate" }]
    },
    {
      "source": "/sw.js",
      "headers": [{ "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }]
    }
  ],

  "routes": [
    {
      "src": "/api/system/health",
      "dest": "https://backend-aigestion-1046057023064.europe-southwest1.run.app/api/v1/health",
      "headers": {
        "Access-Control-Allow-Origin": "https://aigestion.net",
        "Access-Control-Allow-Methods": "GET, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    {
      "src": "/api/system/diagnostic",
      "dest": "https://backend-aigestion-1046057023064.europe-southwest1.run.app/api/v1/system/diagnostic",
      "headers": {
        "Access-Control-Allow-Origin": "https://aigestion.net",
        "Access-Control-Allow-Methods": "GET, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "https://backend-aigestion-1046057023064.europe-southwest1.run.app/api/v1/$1",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "https://aigestion.net",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, PATCH, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Authorization, Cache-Control, X-Request-ID"
      }
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin/$1"
    },
    {
      "src": "/client/(.*)",
      "dest": "/client/$1"
    },
    {
      "src": "/demo/(.*)",
      "dest": "/demo/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],

  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_APP_URL": "https://aigestion.net",
    "NEXT_PUBLIC_API_URL": "https://aigestion.net/api",
    "NEXT_PUBLIC_WS_URL": "wss://aigestion.net"
  }
}
