{
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "bundler",
    "lib": [
      "es2021",
      "dom"
    ],
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "out",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*"
      ],
      "tests/*": [
        "tests/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "traceResolution": false
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.in.ts",
    "linters",
    "documentation/**/*.tsx",
    "WEBSITE_EPIC_TOP5_IMPLEMENTATIONS.tsx"
  ]
}
